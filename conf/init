" vim: filetype=vim
set nocompatible
" force reloading *after* pathogen loaded
filetype off
" initiate vundle
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

autocmd BufWritePre * :%s/\s\+$//e
au BufNewFile,BufRead *.go setlocal noet ts=4 sw=4 sts=4
au FileType go map <leader>r :!go run %<CR>

set vb

" Line numbers
set nonumber
" set number

set numberwidth=3
set guipty
